<h1 class="ls-title-intro ls-ico-bell-o">
  <%= t('.title') %>
</h1>

<div class="ls-alert-danger"><%= alert %></div>
<div class="ls-alert-success"><%= notice %></div>

<% if @promotion.errors.any? %>
<ul style="list-style-type:none">
  <h4><%= t('.errors_phrase') %>: </h4><br>
  <% @promotion.errors.full_messages.each do |msg| %>
    <li>- <%= msg %></li>
  <% end %>
</ul>
 <br><br>
 <% end %>

<button data-ls-module="modal" data-target="#addPromotion" 
        class="ls-btn-primary ls-ico-plus"> <%= t('.add_button') %>
</button>

 <table class="ls-table ls-table-striped">
  <thead>
    <tr>
      <th class="hidden-xs">
        <%= Promotion.human_attribute_name('id') %>
      </th>
      <th>
        <%= Promotion.human_attribute_name('description') %>
      </th>
      <th class="hidden-xs">
        <%= Promotion.human_attribute_name('prefix') %>
      </th>
      <th>
        <%= Promotion.human_attribute_name('discount_percentage') %>
      </th>
      <th class="hidden-xs">
        <%= Promotion.human_attribute_name('max_discount_value') %>
      </th>
      <th>
        <%= Promotion.human_attribute_name('start_date') %>
      </th>
      <th class="hidden-xs">
        <%= Promotion.human_attribute_name('end_date') %>
      </th>
      <th>
        <%= Promotion.human_attribute_name('max_usage') %>
      </th>
      <th class="hidden-xs">
        <%= Promotion.human_attribute_name('status') %>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @promotions.each do | promotion | %>
    <tr id=<%= "promotion-#{promotion.id}" %>>
      <td class="hidden-xs"><%= promotion.id %></td>
      <td><%= promotion.description %></td>
      <td class="hidden-xs"><%= promotion.prefix %></td>
      <td><%= promotion.discount_percentage %></td>
      <td class="hidden-xs"><%= promotion.max_discount_value %></td>
      <td><%= promotion.start_date.strftime('%d/%m/%Y') %></td>
      <td class="hidden-xs"><%= promotion.end_date.strftime('%d/%m/%Y') %></td>
      <td><%= promotion.max_usage %></td>
      <td class="hidden-xs"><%= promotion.status %></td>
      <td>
        <%= link_to t('.edit_button'), edit_promotion_path(promotion), class: 'ls-btn' %> 
        <!-- <%= link_to '', promotion, method: :delete, class: 'ls-btn-primary-danger ls-ico-remove',
                                     data: { confirm: t('.confirmation_deletion') }, 
                                     id: 'deletar_button' %> -->
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= render 'modal' %>

<br><br>