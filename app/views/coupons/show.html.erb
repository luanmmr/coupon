<h1 class="ls-title-intro ls-ico-text2">
  <%= Coupon.model_name.human %>
</h1>

<div class="ls-alert-danger"><%= alert %></div>
<div class="ls-alert-success"><%= notice %></div>

<div class="ls-list">
  <header class="ls-list-header">
    <div class="ls-list-title col-md-9">
      <a href="#" >
        <%= @coupon.code %>
      </a>
      <small><%= @promotion.description %></small>
    </div>
    <div class="col-md-3 ls-txt-right">
      <%= link_to t('.discard_button'), discard_promotion_coupon_path(@coupon), 
                  class: 'ls-btn-primary-danger', method: :post %>
    </div>
  </header>
  
  <div class="ls-list-content ">
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">
        <%= Coupon.human_attribute_name('status') %>
      </span>
      <strong>
        <%= @coupon.status %>
      </strong>
    </div>
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">
        <%= Coupon.human_attribute_name('created_at') %>
      </span>
      <strong>
        <%= @coupon.created_at.strftime('%d/%m/%Y') %>
      </strong>
    </div>
  </div>
</div>